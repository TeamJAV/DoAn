#include <iostream>
#include<stdlib.h>
using namespace std;


void createMatrix(int **A, int vertice){
  for(int i=0; i < vertice; i++){
    for(int j=0; j < vertice; j++){
      A[i][j] = 0;
    }
  }
}

void createData(int **A, int vertice){
  int vertice2 = 0;
  bool check = true;
  for(int i=0; i< vertice; i++){
    for(int j=0; j< vertice; j++){
       cout<<endl<<"Co canh ke nao voi dinh "<<i+1<<" khong? (yes-1| no-0): "; cin>>check;
       if(check){
         cout<<"Dinh ke: ";cin>>vertice2;
         cout<<"Trong so: "; cin>>A[i][vertice2-1];
       }else{
         break;
       }
    }
  }
}



int main(){
  int **A = NULL;
  int vertice = 0;
  cout<<"Nhap so dinh cua do thi: "; cin>>vertice;
  A = (int**)malloc(vertice *sizeof(int*));
  
  for(int i=0; i < vertice; i++){
    A[i] = (int*)malloc(vertice *sizeof(int**));
  }

  createMatrix(A, vertice);
  createData(A, vertice);
  for(int i=0; i< vertice; i++){
    for(int j=0; j<vertice; j++){
      cout<<A[i][j];
    }
    cout<<endl;
  }
  return 0;
}
